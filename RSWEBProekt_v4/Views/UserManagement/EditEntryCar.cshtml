@model RSWEBProekt_v1.ViewModels.EditCarViewModel

@{ 
    ViewBag.Title = "Edit car model";
}

<h1>Change the details from the fields to edit your car entry.</h1>

<a class="btn btn-danger" asp-action="ListEntries" asp-controller="UserManagement">Cancel</a>
<br />
<br />

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" value="@Model.FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea rows="8" cols="50" class="form-control" placeholder="@Model.Description" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdDate"></label>
                <input asp-for="ProdDate" value="@Model.ProdDate" class="form-control" />
                <span asp-validation-for="ProdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" value="@Model.Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" value="@Model.Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Upload image: </label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="UploadedFile" class="form-control custom-file-input" />
                        <label class="custom-file-label"></label>
                        <span asp-validation-for="UploadedFile" class="text-danger"></span>
                    </div>
                </div>
                <br />
            </div>

            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary" style="width:auto">Finish edit</button>

            @section Scripts {
                <script>
                        $(document).ready(function () {
                            $('.custom-file-input').on("change", function () {
                                var filename = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(filename);
                            });
                        });
                </script>
            }
        </form>
    </div>
</div>